# Database Configuration
DATABASE_URL=postgresql://postgres:devpassword@localhost:5432/multimodal_llm
POSTGRES_DB=multimodal_llm
POSTGRES_USER=postgres
POSTGRES_PASSWORD=devpassword

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# MinIO Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET_NAME=multimodal-files
MINIO_SECURE=false

# SearXNG Configuration
SEARXNG_URL=http://localhost:8888

# Whisper Configuration
WHISPER_URL=http://localhost:9000

# LiteLLM Configuration
LITELLM_PROXY_URL=http://localhost:8000

# API Keys (Replace with your actual keys)
# OpenRouter API Key (RECOMMENDED - provides access to multiple models)
# Get your key from: https://openrouter.ai/keys
# Provides access to: GPT-4, Claude, Gemini, Llama models, and more
OPENROUTER_API_KEY=your-openrouter-api-key-here

# Direct Provider API Keys (Optional - used as fallbacks)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
GOOGLE_API_KEY=your-google-api-key-here
AZURE_API_KEY=your-azure-api-key-here
COHERE_API_KEY=your-cohere-api-key-here

# Application Configuration
API_PORT=8001
API_HOST=0.0.0.0
DEBUG=true
LOG_LEVEL=info

# Enhanced Model Router Configuration
# Model selection preferences for the enhanced router
DEFAULT_MODEL=auto
PREFER_FAST_MODELS=false
PREFER_CHEAP_MODELS=false
MAX_COST_PER_1K_TOKENS=10.0

# Pricing Tier Configuration
DEFAULT_PRICING_TIER=standard         # "standard" (OpenRouter) or "enterprise" (direct APIs)
ENABLE_ENTERPRISE_APIS=false          # Set to true to enable direct provider APIs

# Domain name for OpenRouter API headers
DOMAIN_NAME=autopicker.ai

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# File Upload Configuration
MAX_FILE_SIZE_MB=100
ALLOWED_FILE_TYPES=pdf,docx,txt,jpg,jpeg,png,mp3,wav,mp4,avi

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:19006